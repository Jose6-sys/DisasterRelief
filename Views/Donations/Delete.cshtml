@model DisasterRelief.Models.Donation

@{
    ViewData["Title"] = "Delete Donation";
}

<h2 class="mb-3 text-danger">Delete Donation</h2>

<h4>Are you sure you want to delete this donation?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">Type</dt>
    <dd class="col-sm-9">@Model.DonationType</dd>

    <dt class="col-sm-3">Description</dt>
    <dd class="col-sm-9">@Model.Description</dd>

    <dt class="col-sm-3">Quantity</dt>
    <dd class="col-sm-9">@Model.Quantity</dd>

    <dt class="col-sm-3">Contact</dt>
    <dd class="col-sm-9">@Model.ContactName (@Model.ContactPhone)</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
