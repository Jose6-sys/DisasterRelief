@model IEnumerable<DisasterRelief.Models.Donation>
@{
    ViewData["Title"] = "Donations";
}

<h1 class="mb-3">Donations</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">+ New Donation</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Type</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Contact</th>
            <th>Status</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.DonationType</td>
                <td>@d.Description</td>
                <td>@d.Quantity</td>
                <td>@d.ContactName (@d.ContactPhone)</td>
                <td>@d.Status</td>
                <td>@d.CreatedAt.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@d.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@d.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@d.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
