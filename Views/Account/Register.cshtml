@model DisasterRelief.Models.RegisterViewModel
@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - DisasterRelief</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow p-4" style="width: 500px;">
        <h3 class="text-center mb-3">Register</h3>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsVolunteer" class="form-check-input" />
                <label asp-for="IsVolunteer" class="form-check-label"></label>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Skills"></label>
                <input asp-for="Skills" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Availability"></label>
                <input asp-for="Availability" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success w-100">Register</button>

            <div class="text-center mt-3">
                <span>Already have an account?</span>
                <a asp-action="Login" asp-controller="Account">Login here</a>
            </div>
        </form>
    </div>
</body>
</html>
