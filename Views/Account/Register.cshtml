@model DisasterRelief.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-action="Register" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
    </div>

    <div class="form-check">
        <input asp-for="IsVolunteer" class="form-check-input" />
        <label asp-for="IsVolunteer" class="form-check-label"></label>
    </div>

    <div class="form-group">
        <label asp-for="Skills"></label>
        <input asp-for="Skills" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Availability"></label>
        <input asp-for="Availability" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>
