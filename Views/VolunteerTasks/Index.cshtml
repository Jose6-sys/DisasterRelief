@model IEnumerable<DisasterRelief.Models.VolunteerTask>

@{
    ViewData["Title"] = "Volunteer Tasks";
}

<h1 class="mb-3">Volunteer Tasks</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">+ New Task</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Assigned Volunteer</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.AssignedVolunteer?.UserName</td>
                <td>@task.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
