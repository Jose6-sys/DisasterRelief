@model DisasterRelief.Models.VolunteerTask

@{
    ViewData["Title"] = "Task Details";
}

<h2>Task Details</h2>

<div>
    <h4>@Model.Title</h4>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Start Date:</strong> @Model.StartDate?.ToShortDateString()</p>
    <p><strong>End Date:</strong> @Model.EndDate?.ToShortDateString()</p>
    <p><strong>Created At:</strong> @Model.CreatedAt</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
